{
  "topic": "Systemd Boot Failures",
  "category": "systemd",
  "description": "Diagnosing and fixing system boot issues caused by systemd services or units.",
  "symptoms": [
    "System stuck at boot",
    "Black screen after GRUB",
    "Emergency mode prompt",
    "Boot takes very long"
  ],
  "diagnosis": [
    {
      "step": "Check failed units",
      "command": "systemctl --failed",
      "notes": "Lists units that failed during boot"
    },
    {
      "step": "Inspect boot logs",
      "command": "journalctl -b",
      "notes": "Shows logs from current boot"
    },
    {
      "step": "Check previous boot",
      "command": "journalctl -b -1",
      "notes": "Useful if current boot is unstable"
    }
  ],
  "solutions": [
    {
      "fix": "Disable problematic service",
      "command": "systemctl disable <service>",
      "notes": "Use if service blocks boot"
    },
    {
      "fix": "Mask broken unit",
      "command": "systemctl mask <service>",
      "notes": "Prevents unit from starting entirely"
    },
    {
      "fix": "Boot into rescue mode",
      "command": "systemctl rescue",
      "notes": "Minimal environment for recovery"
    }
  ],
  "references": [
    "https://wiki.archlinux.org/title/Systemd",
    "https://wiki.archlinux.org/title/General_troubleshooting"
  ]
}
