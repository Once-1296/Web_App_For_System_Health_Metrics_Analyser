{
  "topic": "Debugging systemd Services",
  "category": "systemd",
  "description": "Steps to inspect, debug, and fix failing or misbehaving systemd services.",
  "symptoms": [
    "Service fails to start",
    "Service exits immediately",
    "Repeated restarts",
    "Dependency errors"
  ],
  "diagnosis": [
    {
      "step": "Check service status",
      "command": "systemctl status <service>",
      "notes": "Shows recent logs and exit codes"
    },
    {
      "step": "View service logs",
      "command": "journalctl -u <service>",
      "notes": "Logs specific to the service"
    },
    {
      "step": "Check dependencies",
      "command": "systemctl list-dependencies <service>",
      "notes": "Find missing or failed dependencies"
    }
  ],
  "solutions": [
    {
      "fix": "Restart service",
      "command": "systemctl restart <service>",
      "notes": "Temporary fix"
    },
    {
      "fix": "Edit service file",
      "command": "systemctl edit <service>",
      "notes": "Creates override file instead of editing vendor unit"
    },
    {
      "fix": "Reload daemon",
      "command": "systemctl daemon-reexec",
      "notes": "Apply unit changes safely"
    }
  ],
  "references": [
    "https://wiki.archlinux.org/title/Systemd#Debugging_services"
  ]
}
