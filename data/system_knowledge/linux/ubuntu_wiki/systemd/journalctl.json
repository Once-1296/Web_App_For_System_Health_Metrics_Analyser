{
  "topic": "Using journalctl",
  "category": "systemd",
  "description": "Querying and analyzing logs stored by systemd-journald on Ubuntu systems.",
  "symptoms": [
    "Need to inspect system logs",
    "Service logs missing",
    "Debugging crashes or boot issues"
  ],
  "diagnosis": [
    {
      "step": "View all logs",
      "command": "journalctl",
      "notes": "Displays the full systemd journal"
    },
    {
      "step": "Filter by boot",
      "command": "journalctl -b",
      "notes": "Shows logs from the current boot session"
    },
    {
      "step": "Filter by service",
      "command": "journalctl -u <service>",
      "notes": "Displays logs for a specific systemd service"
    }
  ],
  "solutions": [
    {
      "fix": "Follow logs in real time",
      "command": "journalctl -f",
      "notes": "Continuously prints new log entries"
    },
    {
      "fix": "Limit logs by time range",
      "command": "journalctl --since \"1 hour ago\"",
      "notes": "Useful for diagnosing recent problems"
    },
    {
      "fix": "Clean old journal logs",
      "command": "journalctl --vacuum-time=7d",
      "notes": "Reduces disk usage by removing older logs"
    }
  ],
  "references": [
    "https://help.ubuntu.com/community/Systemd",
    "https://manpages.ubuntu.com/manpages/journalctl.1.html"
  ]
}
